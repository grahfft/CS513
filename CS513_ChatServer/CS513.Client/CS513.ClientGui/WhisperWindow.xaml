<Window x:Class="CS513.ClientGui.WhisperWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Whisper" Height="250" Width="300">
    <Grid>
        <Label Content="To: " Height="28" HorizontalAlignment="Left" Margin="10,10,0,0" Name="label3" VerticalAlignment="Top" Width="98" />
        <TextBox Height="28" HorizontalAlignment="Left" Margin="74,10,0,0" Name="receiver" VerticalAlignment="Top" Width="150" IsReadOnly="True"/>
        <TextBox Height="100" HorizontalAlignment="Left" Margin="74,59,0,0" Name="chatBox" VerticalAlignment="Top" Width="200" IsReadOnly="false" VerticalScrollBarVisibility="Visible" />
        <Label Content="Message: " Height="28" HorizontalAlignment="Left" Margin="10,59,0,0" Name="message" VerticalAlignment="Top" Width="98" />
        <Button Content="Send" Height="23" HorizontalAlignment="Left" Margin="10,167,0,0" Name="sendMessageButton" VerticalAlignment="Top" Width="117" Click="OnSendMessagePress"/>
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="157,167,0,0" Name="cancelButton" VerticalAlignment="Top" Width="117" Click="OnCancelPress"/>
    </Grid>
</Window>
